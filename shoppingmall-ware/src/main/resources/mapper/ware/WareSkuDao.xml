<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tw.yu.shoppingmall.ware.dao.WareSkuDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="tw.yu.shoppingmall.ware.entity.WareSkuEntity" id="wareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
    </resultMap>

    <insert id="addStock">
        UPDATE shoppingmall_ware_manage.ware_sku
        SET stock = stock + #{skuNum}
        WHERE sku_id = #{skuId}
          AND ware_id = ${wareId}
    </insert>
    <select id="getSkuStock" resultType="java.lang.Long">
        SELECT SUM(stock - stock_locked)
        FROM `shoppingmall_ware_manage.ware_sku`
        WHERE sku_id = #{skuId}
    </select>
</mapper>